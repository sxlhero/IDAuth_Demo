<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fingerimage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/nofinger" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单次指纹采集信息：" />

            <TextView
                android:id="@+id/captureTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/extractTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/generalizeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/verifyTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连续30次指纹采集信息：" />
            
            <TextView
                android:id="@+id/continuousTestInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_readfinger"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="录入指纹" />

        <Button
            android:id="@+id/bt_comparefinger"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="比对指纹" />

        <Button
            android:id="@+id/bt_showfinger"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="显示指纹" />

        <Button
            android:id="@+id/bt_continuousTest"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="连续测试" />
        
        <Button
            android:id="@+id/bt_databaseTest"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="数据库测试" />
    </LinearLayout>

</LinearLayout>